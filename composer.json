{
    "name": "awp-software/login-awp",
    "description": "This plugin modifies the login area for WordPress admin",
    "type": "wordpress-plugin",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "AWP-Software",
            "homepage": "https://github.com/AWP-Software"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Login\\Awp\\": "trunk/src/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration test/phpunit.xml",
        "test:coverage": "phpunit --configuration test/phpunit.xml --coverage-html test/coverage"
    }
}
